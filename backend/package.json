{
  "name": "todo",
  "version": "0.2.0",
  "description": "Todo Backend using Domain Driven Design (DDD), Hexagonal Architecture, CQRS, Event Sourcing (ES), Event Driven Architecture (EDA), Behaviour Driven Development (BDD) using TypeScript and NestJS. Like what you see? Don't forget to star! ⭐",
  "author": "Bitloops S.A.",
  "private": false,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "proto": "protoc --ts_out=./src/proto/generated --ts_opt=target=node --js_out=import_style=commonjs,binary:./src/proto/generated -I ./src/proto ./src/proto/*.proto",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:frontend": "docker compose -p bitloops-todo-app stop && docker compose -p bitloops-todo-app -f frontend-development.docker-compose.yml up -d",
    "docker:backend": "docker compose -p bitloops-todo-app stop && docker compose -p bitloops-todo-app -f server-development.docker-compose.yml up -d"
  },
  "engines": {
    "node": ">=20.11.1"
  },
  "dependencies": {
    "@bitloops/bl-boilerplate-core": "^0.3.6",
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@grpc/grpc-js": "^1.8.13",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^11.1.3",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/testing": "^11.1.3",
    "async-mutex": "^0.5.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "fastify": "^5.4.0",
    "google-protobuf": "^3.21.2",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^6.3.0",
    "nats": "^2.13.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.15.6",
    "@types/jest": "29.5.12",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "18.15.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "grpc_tools_node_protoc_ts": "^5.3.3",
    "grpc-tools": "^1.12.4",
    "jest": "29.7.0",
    "passport": "^0.6.0",
    "prettier": "^2.3.2",
    "protoc-gen-ts": "^0.8.6",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": "(__tests__\\/)(.*)(test|spec|steps)(\\.)(m)?ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setup-jest.js"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@src/(.*)": "<rootDir>/$1",
      "@modules/(.*)": "<rootDir>/modules/$1",
      "@config/(.*)": "<rootDir>/config/$1",
      "@lib/(.*)": "<rootDir>/lib/$1",
      "@tests/(.*)": "tests/$1"
    }
  }
}
